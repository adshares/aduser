{
    "name": "adshares/aduser",
    "description": "Simple AdUser service for Adshares network",
    "type": "project",
    "license": "GPL-3.0-or-later",
    "keywords": [
        "adshares",
        "ads",
        "aduser"
    ],
    "homepage": "https://github.com/adshares/aduser",
    "support": {
        "issues": "https://github.com/adshares/aduser/issues",
        "source": "https://github.com/adshares/aduser"
    },
    "authors": [
        {
            "name": "Adshares",
            "homepage": "https://adshares.pl"
        },
        {
            "name": "Contributors",
            "homepage": "https://github.com/adshares/aduser/graphs/contributors"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "browscap/browscap-php": "^4.2",
        "psr/log": "^1.0",
        "symfony/console": "^4.2",
        "symfony/dotenv": "^4.2",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "^4.2",
        "symfony/monolog-bundle": "^3.3",
        "symfony/orm-pack": "^1.0",
        "symfony/yaml": "^4.2"
    },
    "require-dev": {
        "symfony/var-dumper": "4.2.*",
        "symfony/web-server-bundle": "4.2.*",
        "squizlabs/php_codesniffer": "^3.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4.4",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phpcompatibility/php-compatibility": "^9.1",
        "sensiolabs/security-checker": "^5.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Adshares\\Aduser\\": "src/",
            "Adshares\\Share\\": "share/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Adshares\\Aduser\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "install-codestandards": [
            "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
        ],
        "qa-check": [
            "security-checker security:check",
            "parallel-lint --no-colors --blame --exclude vendor .",
            "phpcs -s src --standard=PHPCompatibility",
            "phpcs -s src --standard=PSR2"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.2.*"
        }
    }
}
