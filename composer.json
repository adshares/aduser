{
    "name": "adshares/aduser",
    "description": "Simple AdUser service for Adshares network",
    "type": "project",
    "license": "GPL-3.0-or-later",
    "keywords": [
        "adshares",
        "ads",
        "aduser"
    ],
    "homepage": "https://github.com/adshares/aduser",
    "support": {
        "issues": "https://github.com/adshares/aduser/issues",
        "source": "https://github.com/adshares/aduser"
    },
    "authors": [
        {
            "name": "Adshares",
            "homepage": "https://adshares.pl"
        },
        {
            "name": "Contributors",
            "homepage": "https://github.com/adshares/aduser/graphs/contributors"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "browscap/browscap-php": "^5.0",
        "doctrine/doctrine-bundle": "^2.5",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "io-developer/php-whois": "^4.1",
        "symfony/cache": "5.3.*",
        "symfony/console": "5.3.*",
        "symfony/dotenv": "5.3.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.3.*",
        "symfony/http-client": "5.3.*",
        "symfony/lock": "5.3.*",
        "symfony/monolog-bundle": "^3.7",
        "symfony/runtime": "5.3.*",
        "symfony/yaml": "5.3.*"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpcompatibility/php-compatibility": "^9.3",
        "slevomat/coding-standard": "^7.0",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/var-dumper": "^5.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "qa-check": [
            "php bin/console lint:yaml config",
            "parallel-lint --no-colors --blame --exclude vendor --exclude bin  .",
            "phpcs"
        ],
        "dev": "/bin/bash -c '(source .env && if [ -f \".env.local\" ]; then source .env.local; fi && php -S ${APP_HOST}:${APP_PORT} -t public dev-router.php)'"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.3.*"
        }
    }
}
