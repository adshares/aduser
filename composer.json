{
    "name": "adshares/aduser",
    "description": "Simple AdUser service for Adshares network",
    "type": "project",
    "license": "GPL-3.0-or-later",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "keywords": [
        "adshares",
        "ads",
        "aduser"
    ],
    "homepage": "https://github.com/adshares/aduser",
    "support": {
        "issues": "https://github.com/adshares/aduser/issues",
        "source": "https://github.com/adshares/aduser"
    },
    "authors": [
        {
            "name": "Adshares",
            "homepage": "https://adshares.pl"
        },
        {
            "name": "Contributors",
            "homepage": "https://github.com/adshares/aduser/graphs/contributors"
        }
    ],
    "require": {
        "php": "^7.4|^8.1",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "browscap/browscap-php": "^6.0",
        "doctrine/doctrine-bundle": "^2.5",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "io-developer/php-whois": "^4.1",
        "psr/cache": "^1.0",
        "psr/log": "^1.1",
        "symfony/cache": "5.4.*",
        "symfony/console": "5.4.*",
        "symfony/dotenv": "5.4.*",
        "symfony/flex": "^1.17|^2",
        "symfony/framework-bundle": "5.4.*",
        "symfony/http-client": "5.4.*",
        "symfony/lock": "5.4.*",
        "symfony/monolog-bundle": "^3.7",
        "symfony/runtime": "5.4.*",
        "symfony/yaml": "5.4.*"
    },
    "require-dev": {
        "dama/doctrine-test-bundle": "^6.7",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpunit/phpunit": "^9.5",
        "slevomat/coding-standard": "^7.0",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/phpunit-bridge": "^6.0",
        "symfony/var-dumper": "^5.4"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "qa-check": [
            "php bin/console lint:yaml config",
            "parallel-lint --no-colors --blame --exclude vendor --exclude bin .",
            "phpcs -s"
        ],
        "test": "phpunit",
        "test-coverage": "XDEBUG_MODE=coverage phpunit --coverage-text",
        "test-ci": "@test-coverage --coverage-clover ./var/phpunit/coverage.xml --log-junit ./var/phpunit/logfile.xml",
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "/bin/bash -c '(source .env && if [ -f \".env.local\" ]; then source .env.local; fi && php -S ${APP_HOST:-localhost}:${APP_PORT:-8002} -t public dev-router.php)'"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.4.*"
        }
    }
}
